{
  "details": {
    "name": "Baldur API",
    "description": "Mockup Data Fetching API for RecyclePlace development.",
    "version": "1.0.11"
  },
  "endpoints": {
    "users": [
      {
        "method": "GET",
        "endpoint": "/api/v1/users/:id",
        "description": "Fetches data from a specific user by id."
      },
      {
        "method": "GET",
        "endpoint": "/api/v1/users",
        "description": "Fetches data from all users in the current mocked database."
      },
      {
        "method": "POST",
        "endpoint": "/api/v1/users",
        "description": "Creates a new user with provided data given the appropriate payload.",
        "payload": {
          "data": {
            "username": "string",
            "password": "string",
            "profile": {
              "name": "string",
              "email": "string@email.com",
              "typology": 1,
              "documentNumber": 12345678911
            }
          }
        }
      }
    ]
  }
}